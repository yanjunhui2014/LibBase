<?xml version="1.0" encoding="UTF-8"?>     
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">     
  
   <item android:id="@android:id/background">     
      <shape>     
         <corners android:radius="1dip" />     
         <gradient     
             android:startColor="@color/libbase_c4"
             android:centerColor="@color/libbase_c4"
             android:endColor="@color/libbase_c4"
             android:centerY="0.5"     
             android:angle="270"/>     
      </shape>     
   </item>     
      
   <item android:id="@android:id/progress">     
       <clip>     
          <shape>     
              <corners android:radius="1dip" />     
              <gradient     
                  android:startColor="@color/libbase_c1"
                  android:centerColor="@color/libbase_c1"
                  android:endColor="@color/libbase_c1"
                  android:centerY="0.5"     
                  android:angle="270"/>     
          </shape>     
       </clip>     
   </item>     
 </layer-list>    
